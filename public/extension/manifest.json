{
  "manifest_version": 3,
  "name": "Frevo",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.freelancer.com/*",
        "*://www.freelancer.pk/*",
        "*://www.freelancer.in/*",
        "*://freelancer.com/*",
        "*://freelancer.pk/*",
        "*://freelancer.in/*"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://www.freelancer.com/*",
    "*://www.freelancer.pk/*",
    "*://www.freelancer.in/*",
    "*://freelancer.com/*",
    "*://freelancer.pk/*",
    "*://freelancer.in/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
