{
  "manifest_version": 3,
  "name": "Frevo",
  "version": "1.0",
  "description": "AI proposal generation, star filtering, and pagination modifier for Freelancer",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.freelancer.com/*",
        "*://www.freelancer.pk/*",
        "*://www.freelancer.in/*",
        "*://freelancer.com/*",
        "*://freelancer.pk/*",
        "*://freelancer.in/*"
      ],
      "js": ["assets/content.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://www.freelancer.com/*",
    "*://www.freelancer.pk/*",
    "*://www.freelancer.in/*",
    "*://freelancer.com/*",
    "*://freelancer.pk/*",
    "*://freelancer.in/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": [
        "*://www.freelancer.com/*",
        "*://www.freelancer.pk/*",
        "*://www.freelancer.in/*",
        "*://freelancer.com/*",
        "*://freelancer.pk/*",
        "*://freelancer.in/*"
      ]
    },
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
