{
  "manifest_version": 3,
  "name": "Frevo",
  "version": "1.0",
  "description": "AI proposal generation, star filtering, and pagination modifier for Freelancer",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.freelancer.com/*",
        "*://www.freelancer.pk/*",
        "*://www.freelancer.in/*",
        "*://freelancer.com/*",
        "*://freelancer.pk/*",
        "*://freelancer.in/*"
      ],
      "js": ["assets/content.js", "assets/content2.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://www.freelancer.com/*",
    "*://www.freelancer.pk/*",
    "*://www.freelancer.in/*",
    "*://freelancer.com/*",
    "*://freelancer.pk/*",
    "*://freelancer.in/*",
    "https://www.googleapis.com/*",
    "http://frevo.app/*",
    "http://localhost:3000/*"
  ],
  "oauth2": {
    "client_id": "638436431388-94mqrvferu8sv2kqsln39c55jdn2760d.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "interceptor.js"],
      "matches": [
        "*://www.freelancer.com/*",
        "*://www.freelancer.pk/*",
        "*://www.freelancer.in/*",
        "*://freelancer.com/*",
        "*://freelancer.pk/*",
        "*://freelancer.in/*"
      ]
    },
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
